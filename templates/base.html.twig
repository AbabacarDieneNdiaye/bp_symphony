<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="author" content="ADN"/>
    	<meta name="description" content="Projet BP: version symfony"/>

        <title>{% block title %}Banque du Peuple{% endblock %}</title>
		
        {% block stylesheets %}
            <link type="text/css" rel="stylesheet" href="{{ asset('css/style.css') }}"/>
		    <link type="text/css" rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}"/>
		    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        {% endblock %}
		
	</head>
	<body>
        {% block header %}
            <header>
			<!--logo et nom banque-->
					<div class="logo">
						<img src="{{ asset('images/bplogo.png')}}" alt="logo BP"/>
						<h2>Banque du Peuple</h2>
					</div>
			<!--end of logo et nom banque-->
			
			<!--nav-->               
				   <nav>
						<ul>
							<li><a href="{{ path('accueil') }}">Accueil</a></li>
							<li class="dropdown">
								<a href="javascript:void(0)" class="dropbtn">Ajouter un client</a>
								<div class="dropdown-content">
								  <a href="{{ path('clientPhysique') }}">Client Physique</a>
								  <a href="{{ path('clientMoral') }}">Client Moral</a>
								</div>
							</li>
							<li><a href="{{ path('compte') }}">Ajouter compte</a></li>
							<li class="dropdown">
								<a href="javascript:void(0)" class="dropbtn">Listes</a>
								<div class="dropdown-content">
								  <a href="{{ path('CPlist') }}">-Particuliers</a>
								  <a href="{{ path('CMlist') }}">-Entreprises</a>
								  <a href="{{ path('Clist') }}">-Comptes</a>
								</div>
							</li>
						</ul>
				   </nav>
			<!--end of nav--> 
		</header>
        {% endblock %}
		

        {% block body %}{% endblock %}

        {% block footer %}
		
            <footer>
        
                <div class="copyrights" style="text-align:center; margin-top:40px">

                <p>&copy; Developed by ADN with Symfony 5.1 (Fabrique Simplon AUF Senegal)</p>

                </div>

            </footer>

        {% endblock %}
        
        {% block javascripts %}
		
			<script src="{{ asset('js/scriptCompte.js') }}"></script>
			<script src="{{ asset('js/scriptClient.js') }}"></script>
			<script src="{{ asset('js/jquery-ui.js') }}"></script>
			<script src="{{ asset('js/jquery.js') }}"></script>
			<script src="{{ asset('js/angular-1.3.12.js') }}"></script>

		{% endblock %}
    </body>
</html>
