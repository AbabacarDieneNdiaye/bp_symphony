{% extends 'base.html.twig' %}

{% block title %}Liste des Clients Physiques{% endblock %}

{% block body %}


<div class="example-wrapper">
    <h1>Listes des Clients Physiques</h1>
</div>

<a href="{{ path('clientPhysique') }}" class="btn btn-primary">Nouveau Client</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Adresse</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.nom }}</td>
                <td>{{ client.prenom }}</td>
                <td>{{ client.tel }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.Adresse }}</td>
                <td>
                    <a href="{{ path('clientP_show', {'id': client.id}) }}" class="btn btn-info">Voir plus !</a>
                    <a href="{{ path('clientP_delete', {'id': client.id}) }}" class="btn btn-danger">Supprimer</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune donn√©e !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
